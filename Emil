    <script>
        function filterLetters(category) {
            const letters = document.querySelectorAll('.letter');
            letters.forEach(letter => {
                if (category === 'all') {
                    letter.style.display = 'block';  // Show all letters
                } else if (letter.classList.contains(category)) {
                    letter.style.display = 'block';  // Show letters matching the category
                } else {
                    letter.style.display = 'none';   // Hide others
                }
            });
        }

        function selectLetter(letterElement) {
            const selectedLetterContent = letterElement.querySelector('p').textContent;
            const selectedLetterDisplay = document.getElementById('selectedLetter');
            selectedLetterDisplay.textContent = selectedLetterContent;
            selectedLetterDisplay.style.display = 'block';
        }

        function showLetterButton(buttonElement) {
            const allButtons = document.querySelectorAll('.letter-button');
            allButtons.forEach(button => button.style.display = 'none'); // Hide all buttons
            buttonElement.style.display = 'block'; // Show the clicked button
        }
    </script>
